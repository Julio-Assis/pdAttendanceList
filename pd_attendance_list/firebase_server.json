{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "pd-server-attendance-list/build",
    "ignore": [
      "firebase.json"
    ],
    "rewrites": [
      {
        "source": "index.js",
        "function": "app"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default"
    },
    {
      "source": "build",
      "codebase": "pd-server",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
